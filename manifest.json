{
    "manifest_version": 3,
    "name": "YouTube Transcript Summarizer",
    "version": "1.0",
    "description": "Extracts and summarizes YouTube video transcripts",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [{
        "resources": ["popup.css"],
        "matches": ["<all_urls>"]
    }],
    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["dist/content.bundle.js"]
        }
    ]
  }