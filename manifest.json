{
    "manifest_version": 3,
    "name": "RedWriter Extension",
    "version": "1.0.0",
    "description": "Your extension description",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "css": ["styles/transcript.css"],
            "js": ["dist/content.bundle.js"]
        }
    ]
}